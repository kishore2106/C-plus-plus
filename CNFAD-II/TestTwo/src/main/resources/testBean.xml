<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="department" class="com.example.TestTwo.Department" scope="prototype">
    	<constructor-arg name="college" ref="college"/>
    </bean>
    
    <bean id="college" class="com.example.TestTwo.College" scope="singleton">
    	<property name="name" value="RV College of Engineering"></property>
    	<property name="address" value="Mysore Rd, Bengaluru"></property>
    </bean>
</beans>